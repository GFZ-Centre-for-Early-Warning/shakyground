{
    "title": "ShakygroundProcess",
    "abstract": "This is the description of the shakyground process",
    "imageId": "shakyground:latest",
    "workingDirectory": "/usr/share/git/shakyground",
    "commandToExecute": "python3 service.py",
    "exitValueHandler": "logging",
    "stderrHandler": "pythonTraceback",
    "input": [
        {
            "title": "quakeMLFile",
            "abstract": "quakeML to use for computing the shakemap",
            "useAs": "commandLineArgument",
            "type": "quakeml",
            "schema": "http://quakeml.org/xmlns/quakeml/1.2/QuakeML-1.2.xsd"
        },
        {
            "title": "gmpe",
            "abstract": "Ground motion prediction equation.",
            "useAs": "commandLineArgument",
            "type": "string",
            "default": "MontalvaEtAl2016SInter",
            "allowed": [
                "MontalvaEtAl2016SInter",
                "GhofraniAtkinson2014",
                "AbrahamsonEtAl2015SInter",
                "YoungsEtAl1997SInterNSHMP2008"
            ]
        },
        {
            "title": "vsgrid",
            "abstract": "Grid shear wave velocity in 30 meter depth",
            "useAs": "commandLineArgument",
            "type": "string",
            "default": "USGSSlopeBasedTopographyProxy",
            "allowed": [
                "USGSSlopeBasedTopographyProxy",
                "FromSeismogeotechnicsMicrozonation"
            ]
        }
    ],
    "output": [
        {
            "title": "shakeMapFile",
            "abstract": "resulting shakemap",
            "readFrom": "stdout",
            "type": "shakemap",
            "schema": "http://earthquake.usgs.gov/eqcenter/shakemap"
        }
    ]
}
